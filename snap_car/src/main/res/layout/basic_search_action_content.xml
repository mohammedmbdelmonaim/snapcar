<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin"
    android:layout_marginTop="@dimen/margin_micro">

    <TextView
        android:id="@+id/tv_advanced_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_weight="1"
        android:background="@drawable/shape_rounded_corner_rectangle_green"
        android:gravity="center"
        android:paddingTop="@dimen/padding_micro"
        android:paddingBottom="@dimen/padding_micro"
        android:text="@string/advanced_search"
        android:textColor="@color/md_white_1000"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_weight="1"
        android:background="@drawable/shape_light_blue_rounded_rectangle"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_micro"
        android:paddingTop="@dimen/padding_micro"
        android:text="@string/search"
        android:textColor="@color/md_white_1000" />
</LinearLayout>