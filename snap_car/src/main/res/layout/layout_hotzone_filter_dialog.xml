<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin"
    android:layout_marginStart="@dimen/margin"
    android:background="@drawable/shape_rounded_corner_white_rectangle">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_extra"
        android:layout_marginEnd="@dimen/margin_extra"
        android:layout_marginStart="@dimen/margin_extra"
        android:layout_marginTop="@dimen/margin"
        android:gravity="center"
        android:text="@string/find_your_match_car"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/textSizeText"
        app:layout_constraintBottom_toTopOf="@id/yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginEnd="@dimen/margin_extra"
        android:layout_marginStart="@dimen/margin_extra"
        android:background="@drawable/shape_rounded_corner_gradient_rectangle"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_nano"
        android:paddingEnd="@dimen/padding_extra"
        android:paddingStart="@dimen/padding_extra"
        android:paddingTop="@dimen/padding_nano"
        android:text="@string/okk"
        android:textColor="@color/md_white_1000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_message" />

    <TextView
        android:id="@+id/no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_extra"
        android:background="@drawable/shape_rounded_corner_gradient_rectangle"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_nano"
        android:paddingEnd="@dimen/padding_extra"
        android:paddingStart="@dimen/padding_extra"
        android:paddingTop="@dimen/padding_nano"
        android:text="@string/cancel"
        android:textColor="@color/md_white_1000"
        app:layout_constraintBottom_toBottomOf="@id/yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/yes"
        app:layout_constraintTop_toTopOf="@id/yes" />

</androidx.constraintlayout.widget.ConstraintLayout>